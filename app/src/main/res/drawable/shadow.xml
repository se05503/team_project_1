            <corners android:radius="5dp"/> <solid android:color="#40cccccc" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="0dp" android:right="1dp" android:bottom="2dp" android:left="0dp"/>
            <corners android:radius="5dp"/> <solid android:color="#50cccccc" />
